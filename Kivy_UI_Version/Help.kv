#:kivy 1.1.0
<HomeWidget>:
 
    BoxLayout:
        orientation: 'vertical'
        width: root.width
        height: root.height
        BoxLayout:
            size_hint: 1.0, 0.2
            orientation: 'horizontal'
            Button:
                background_normal: 'home.png'
                background_down: 'home_down.png'
                size_hint: None, None
                size: 48,48
                pos_hint:{'center_x': .3 'center_y': .2}
            Label:
                text: 'gap'
            Button:
                background_normal: ''
                background_down: ''
                background_color:95/256, 96/256, 89/256, 1
                size_hint: None, None
                size: 48,48
                pos_hint:{'center_x': .3, 'center_y': .2}
                        
        Label:
            font_size: 70  
            text: 'Memory'
        Label:
            size_hint: 1,0.2
            text:'gap'
        Button:
            
            size_hint: 0.5,0.5
            pos_hint:{'center_x': .5, 'center_y': .3}
            text: 'Start'
        Label:
            size_hint: 1,0.2
            text:'gap'
