#:kivy 1.1.0
<HomeWidget>:
 
    BoxLayout:
        size: self.parent.size
        pos: self.parent.pos
        background_normal:''
        background_color: 95/256, 96/256, 89/256, 1
        orientation: 'vertical'
        width: root.width
        height: root.height
        BoxLayout:
            size_hint: (1.0, 0.2)
            orientation: 'horizontal'
            Label:
                font_name: 'larabiefont rg'
                text: 'temp'
            Label:
                font_name: 'larabiefont rg'
                text: 'help'
        Label:
            font_name: 'larabiefont rg'
            font_size: 70  
            text: 'Memory'
        Button:
            background_normal:''
            background_color: 92/256, 16/256, 98/256, 1
            font_name: 'larabiefont rg'
            font_size: 36
            size_hint: (0.2,0.2)
            size_hint_max: (149,48)
            #pos_x:(root.width/2-self.width/2)
            center_x: self.parent.width / 2
            text: 'Start'